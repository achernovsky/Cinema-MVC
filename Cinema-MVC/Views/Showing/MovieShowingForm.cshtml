@model Cinema_MVC.ViewModels.MovieShowingViewModel
@{
    ViewBag.Title = "MovieShowingForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Showing Form</h2>

@using (Html.BeginForm("Save", "Showings", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(s => s.Showing.MovieId)
        @Html.DropDownListFor(s => s.Showing.MovieId, new SelectList(Model.Movies, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Showing.Showtime)
        @Html.TextBoxFor(s => s.Showing.Showtime, "", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => Model.Showing.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}