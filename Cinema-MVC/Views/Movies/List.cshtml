@model Cinema_MVC.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies List</h2>

<table class="table">
    <tr class="table-info">
        <th>Name</th>
        <th></th>
    </tr>
    @foreach (var movie in Model.Movies)
    {
        <tr>
            <td>@movie.Name</td>
            <td>
                <a href="@("/Movies/Edit/"+movie.Id)" class="btn btn-primary" role="button">Edit Movie</a>
                <a href="@("/Movies/Delete/"+movie.Id)" class="btn btn-danger" role="button">Delete Movie</a>
            </td>
        </tr>
    }
</table>

