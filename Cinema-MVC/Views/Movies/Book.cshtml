@model Cinema_MVC.ViewModels.ShowingViewModel
@{
    ViewBag.Title = "Book Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Select Showtime:</h2>

<table class="table">

    @foreach (var showing in Model.showings)
    {
    <tr class="table-light">
        <td>@showing.Showtime.ToString()</td>
        <td> <a href="@("/Showing/Book/"+showing.Id)" class="btn btn-success" role="button">Book Tickets</a></td>
    </tr>}
</table>