@model Cinema_MVC.Models.Theater
@{
    ViewBag.Title = "TheaterForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Theater Form</h2>
@using (Html.BeginForm("Save", "Theaters", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(t => t.TheaterNum)
        @Html.TextBoxFor(t => t.TheaterNum, new { @class = "form-control", @type = "number" })
        @Html.ValidationMessageFor(t => t.TheaterNum)
    </div>
    <div class="form-group">
        @Html.LabelFor(t => t.NumOfRows)
        @Html.TextBoxFor(t => t.NumOfRows, new { @class = "form-control", @type = "number" })
        @Html.ValidationMessageFor(t => t.NumOfRows)
    </div>
    <div class="form-group">
        @Html.LabelFor(t => t.NumOfSeatsPerRow)
        @Html.TextBoxFor(t => t.NumOfSeatsPerRow, new { @class = "form-control", @type = "number" })
        @Html.ValidationMessageFor(t => t.NumOfSeatsPerRow)
    </div>
    @Html.HiddenFor(t => t.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
